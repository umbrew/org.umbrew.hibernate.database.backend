<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<arquillian xmlns="http://jboss.org/schema/arquillian"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
	<container qualifier="arquillian-wildfly-managed" default="true">
		<protocol type="jmx-as7">
			<property name="executionType">REMOTE</property>
		</protocol>
		<configuration>
			<property name="jbossHome">${jboss.home}</property>
			<property name="allowConnectingToRunningServer">false</property>
			<property name="outputToConsole">true</property>
			<property name="javaVmArguments">-Darquillian.debug=false -Djava.net.preferIPv4Stack=true -Xms128m -Xmx512m -agentlib:jdwp=transport=dt_socket,address=8787,server=y,suspend=n</property>
		</configuration>
	</container>
</arquillian>
